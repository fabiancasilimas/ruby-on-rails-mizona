<% if user_signed_in? %>
<h1>Bienvenido <%= current_user.firstname %> </h1>
<% else %>
<h1>Mi Zona</h1>
<% end %>

<p>
          	<% if current_user %>
	          	<%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, :class => 'btn btn-secondary my-2' %>
          	<% else	%>
	          	<%= link_to 'Iniciar sesión', new_user_session_path, :class => 'btn btn-primary my-2' %>
	           	<%= link_to 'Registrarse', new_user_registration_path, :class => 'btn btn-secondary my-2' %>
          	<% end %>
           		
          </p>
