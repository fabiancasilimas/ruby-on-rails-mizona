<div class="text-center">
<h2 class="mt-5 my-4">Cambia tu contraseña</h2>

<%= form_for(resource, as: resource_name, :class => 'form-signin', url: password_path(resource_name), html: { method: :put }) do |f| %>

  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div>
   <%= f.text_field :password, autofocus: true, required: true, autocomplete: "off", :class => 'form-control form-signin-pass', :placeholder => 'Nueva contraseña' %>
    <% if @minimum_password_length %>
      <em class="text-muted">(<%= @minimum_password_length %> caracteres como mínimo)</em>
    <% end %>
  </div>

  <div>
  <%= f.text_field :password_confirmation, autofocus: true, autocomplete: "off", required: true,  :class => 'form-control form-signin-email', :placeholder => 'Confirmar nueva contraseña' %>

    </div>

    <div class="text-center">
      <%= f.submit 'Cambiar mi contraseña', :class => 'btn btn-primary' %>
    </div>
<% end %>
<div class="text-center mt-3">
<%= render "devise/shared/links" %>
</div>
</div>
