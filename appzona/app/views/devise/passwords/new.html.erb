<div class="text-center">
<h2 class="mt-5 my-4">¿Has olvidado tu contraseña?</h2>


<%= form_for(resource, as: resource_name, :class => 'form-signin', url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", :class => 'form-control form-signin-email', :placeholder => 'Correo electrónico' %>
  </div>

  <div class="actions">
    <%= f.submit 'Restablecer contraseña', :class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>